 number = {D4},
 pages = {7315-7328},
 title = {A model simulation of Pinatubo volcanic aerosols in the stratosphere},
 url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/94JD03325},
 volume = {100},
