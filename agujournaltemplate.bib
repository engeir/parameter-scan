@article{osipov2020,
 abstract = {Abstract Volcanic eruptions are an important climate driver. The impact of Pinatubo-sized eruptions has been observed and is well constrained. The magnitude and duration of volcanic winter effects after supereruptions such as Toba remain disputed due to disagreement between the strong cooling predicted by models and much milder climate perturbations according to the paleodata. Here we present a reevaluated climate impact of a Toba-sized supereruption based on up-to-date GISS ModelE simulations. In this study, we account for all known primary mechanisms that govern the evolution of the volcanic plume and their nonlinear interactions. The SO radiative effects are evaluated for the first time in coupled climate simulations with the interactive atmospheric chemistry module. We found that SO effects on photochemistry, dynamics, and radiative forcing are especially prominent. Due to strong absorption in ultraviolet, SO feedback on photochemistry partially offsets the limiting effect associated with aerosol microphysical processes. SO greenhouse warming soothes the radiative cooling exerted by sulfate aerosols. SO absorption in the shortwave and longwave causes radiative heating and lofting of the volcanic plume, and boosts the efficiency of SO impact on photochemistry. Our analysis shows that SO lifetime and magnitude of effects scale up and increase with the amount of emitted material. For a Pinatubo-sized eruption, SO feedbacks on chemistry and dynamics are relevant only during the initial stage of the volcanic plume evolution, while local SO concentrations are high. For a Toba-sized eruption, SO effects are as important as sulfate aerosols and produce a less extreme volcanic winter.},
 author = {Osipov, Sergey and Stenchikov, Georgiy and Tsigaridis, Kostas and LeGrande, Allegra N. and Bauer, Susanne E.},
 doi = {10.1029/2019JD031726},
 eprint = {https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2019JD031726},
 journal = {Journal of Geophysical Research: Atmospheres},
 keywords = {supereruption, Toba, volcanic winter, sulfate aerosols, climate impact, sulfur dioxide},
 note = {e2019JD031726 10.1029/2019JD031726},
 number = {2},
 pages = {e2019JD031726},
 title = {The Role of the SO Radiative Effect in Sustaining the Volcanic Winter and Soothing the Toba Impact on Climate},
 url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2019JD031726},
 volume = {125},
 year = {2020}
}

