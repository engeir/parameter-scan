 issn = {0930-7575},
 journal = {Climate Dynamics},
 month = {February},
 number = {5},
 pages = {481--502},
 title = {{Inferring climate sensitivity from volcanic events}},
 url = {http://link.springer.com/10.1007/s00382-006-0193-x},
 volume = {28},
 year = {2007}
}

